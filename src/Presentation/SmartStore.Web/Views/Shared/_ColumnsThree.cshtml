                                        <a class="next-slide transition"><i class="fa fa-long-arrow-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>*@
                        <!--footer social links-->
                        <div class="col-md-12">
                            <div class="footer-social">
