    string[] spanWidths = GetThemeVariable<string>("GridSettings", "5/14/5").Split('/');
}
<!--================= main start ================-->
<div id="main">
    <!--=============== header ===============-->
    <header>
        <div class="header-inner">
            <div class="container">
                <!--navigation social links-->
                <div class="nav-social">
                    <ul>
                        @*<li><a href="#" target="_blank"><i class="fa fa-facebook"></i></a></li>
        <li><a href="#" target="_blank"><i class="fa fa-twitter"></i></a></li>*@
                        <li><a href="http://websta.me/n/espressomesin" target="_blank"><i class="fa fa-instagram"></i></a></li>
                        @*<li><a href="#" target="_blank"><i class="fa fa-pinterest"></i></a></li>
        <li><a href="#" target="_blank"><i class="fa fa-tumblr"></i></a></li>*@
                    </ul>
                </div>
                <!--logo-->
                <div class="logo-holder">
                    <a href="#">
                        @*<p class="respimg logo-vis">Espresso Mesin</p>
                            <p class="respimg logo-notvis">Espresso Mesin</p>*@
                        <img src="/images/logoMiniWhite.png" class="respimg logo-vis" alt="">
                        <img src="/images/LogoGambar.png" class="respimg logo-notvis" alt="">
                    </a>
                </div>
                <!--Navigation -->
                <div class="nav-holder col-md-10 col-sm-6 col-xs-12">
                    <nav class="menu">
                        <ul style="float:right;">
                            <li>@Html.Action("SearchBox", "Catalog")</li>
                            <li><a href="/home">Home</a></li>
                            <li><a href="/newproducts">Product</a></li>
                            <li><a href="/cart">Cart</a></li>
                        </ul>
                        <ul style="float:right;margin-top:-10px;">
                            @Html.Action("ShopBar", "Common", new { area = "" })
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

    </header>

    <!--header end-->
    <!--=============== wrapper ===============-->
    <div id="wrapper">
        <!--=============== Hero content ===============-->
        <div class="content full-height hero-content">
            <div class="slideshow-container" data-top-bottom="transform: translateY(300px);" data-bottom-top="transform: translateY(-300px);">
                <!-- slideshow -->
                <div class="slides-container">
                    <!-- 1 -->
                    <div class="bg"><img src="~/images/bg/slider.jpg" style="width:100%;height:100%;" /></div>
                    <!-- 2 -->
                    <div class="bg"><img src="~/images/bg/slider.jpg" style="width:100%;height:100%;" /></div>
                    <!-- 2 -->
                    <div class="bg"><img src="~/images/bg/slider.jpg" style="width:100%;height:100%;" /></div>
                    <!-- 2 -->
                </div>
            </div>
            <div class="hero-title-holder">
                <div class="overlay"></div>
                <div class="hero-title">
                    @*<div class="hero-decor b-dec">
                        <div class="half-circle"></div>
                    </div>*@
                    <div class="separator color-separator"></div>
                    <h3>Adding value to your life</h3>
                </div>
            </div>
            <div class="hero-link">
                <a class="custom-scroll-link" href="#sec1"><i class="fa fa-angle-double-down"></i></a>
            </div>
        </div>
        <!--hero end-->
        <div class="content">
            <!--=============== About ===============-->
            <section @*class="about-section" id="sec1"*@>
                @*<div class="container">
                    <div class="row">*@
                        <div id="content-left" class="col-md-3" style="margin-top:15px;">
                            @if (IsSectionDefined("left"))
                            {
                                @RenderSection("left")
                            }
                            else
                            {
                                @Html.Widget("left_side_column_before")

                                @Html.Action("CategoryNavigation", "Catalog", new { currentCategoryId = this.CurrentCategoryId, currentProductId = this.CurrentProductId, area = "" })
                                @Html.Widget("left_side_column_after_category_navigation")

                                @Html.Action("ManufacturerNavigation", "Catalog", new { currentManufacturerId = this.CurrentManufacturerId, area = "" })
                                @Html.Widget("left_side_column_after_manufacturer_navigation")

                                @Html.Action("PopularProductTags", "Catalog", new { area = "" })
                                @Html.Widget("left_side_column_after_tags")

                                @*@Html.Action("InfoBlock", "Common", new { area = "" })
            @Html.Widget("left_side_column_after_info")*@

                                @Html.Action("PollBlock", "Poll", new { systemKeyword = "LeftColumnPoll", area = "" })
                                @Html.Widget("left_side_column_after_poll")

                                @Html.Widget("left_side_column_after")
                            }
                        </div>
                        <div id="content-center" class="col-md-6">
                            @Html.Widget("main_column_before")
                            @RenderBody()
                            @Html.SmartCssFiles(this.Url, ResourceLocation.Foot)
                            @Html.SmartScripts(this.Url, ResourceLocation.Foot)
                            @Html.Widget("main_column_after")
                        </div>
                        <div id="content-right" class="col-md-3" style="margin-top:15px;">
                            @if (IsSectionDefined("right_top"))
                            {
                                @RenderSection("right_top", false)
                            }

                            @if (IsSectionDefined("right"))
                            {
                                @RenderSection("right")
                            }
                            else
                            {
                                @Html.Widget("right_side_column_before")

                                @Html.Action("RecentlyViewedProductsBlock", "Catalog", new { area = "" })
                                @Html.Widget("right_side_column_after_recentlyviewed")
                                @Html.Action("PollBlock", "Poll", new { systemKeyword = "RightColumnPoll", area = "" })
                                @Html.Widget("right_side_column_after_poll")

                                @Html.Widget("right_side_column_after")
                            }
                        </div>
                    @*</div>
                </div>*@
            </section>
        </div>
        <!--content end-->
        <!--=============== footer ===============-->
        <footer>
            <div class="footer-inner">
                <div class="container">
                    <div class="row">
                        <!--tiwtter-->
                        @*<div class="col-md-4">
